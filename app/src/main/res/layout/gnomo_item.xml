<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            tools:text="Gnomo ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_id_value"
            app:layout_constraintStart_toEndOf="@+id/text_view_item_id"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            tools:text="Gnomo Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_number_value"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_id_value"
            android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/text_view_item_number"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_id"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Number:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_item_id"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:src="@drawable/tick" android:id="@+id/gnomo_image"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.909"
            android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>